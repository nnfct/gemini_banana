{
    "name": "ai-virtual-try-on-frontend",
    "private": true,
    "version": "1.0.0",
    "description": "Frontend React application for AI Virtual Try-On",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:py": "cross-env VITE_API_URL=http://localhost:3001 vite",
        "build": "npm run build:clean && npm run build:prod",
        "build:clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', {recursive: true});\"",
        "build:prod": "cross-env NODE_ENV=production vite build",
        "build:analyze": "cross-env NODE_ENV=production ANALYZE=true vite build",
        "preview": "vite preview",
        "preview:prod": "cross-env NODE_ENV=production vite preview",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix"
    },
    "dependencies": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "cross-env": "^7.0.3",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "jsdom": "^23.0.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "terser": "^5.43.1",
        "typescript": "~5.8.2",
        "vite": "^6.2.0",
        "vitest": "^1.0.4"
    },
    "keywords": [
        "react",
        "typescript",
        "vite",
        "ai",
        "virtual-try-on"
    ],
    "author": "",
    "license": "ISC"
}
